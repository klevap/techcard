  "processSteps": [
    {
      "id": "p1",
      "number": "1",
      "description": "In separate vessels, heat phases A and B to 80°C.",
      "equipment": "V-101, V-102",
      "parameters": [
        {
          "id": "param_temp_AB",
          "name": "Temperature",
          "norm": "80°C"
        }
      ]
    },
    {
      "id": "p2",
      "number": "2",
      "description": "Slowly add phase A into phase B under stirring. The emulsion will turn into a gel.",
      "equipment": "V-101",
      "parameters": []
    },
    {
      "id": "p3",
      "number": "3",
      "description": "Begin cooling down with gentle stirring.",
      "equipment": "V-101",
      "parameters": [
        {
          "id": "param1",
          "name": "Stirring Speed",
          "norm": "200 rpm"
        }
      ]
    },
    {
      "id": "p4",
      "number": "4",
      "description": "At 60°C, add Cetiol Ultimate (Phase C) under high shear stirring.",
      "equipment": "V-101, HOMO-1",
      "parameters": [
        {
          "id": "param_temp_C",
          "name": "Addition Temperature",
          "norm": "60°C"
        },
        {
          "id": "param_stir_C",
          "name": "Stirring Speed",
          "norm": "1000 rpm"
        }
      ]
    },
    {
      "id": "p5",
      "number": "5",
      "description": "At room temperature (below 30°C), add the ingredients of phase D one after the other, ensuring each is fully incorporated before adding the next.",
      "equipment": "V-101",
      "parameters": [
        {
          "id": "param_temp_D",
          "name": "Addition Temperature",
          "norm": "< 30°C"
        }
      ]
    },
    {
      "id": "p6",
      "number": "6",
      "description": "Check the pH of the batch. Adjust the pH to 6.5 with phase E.",
      "equipment": "V-101, QC-PH-01",
      "parameters": [
        {
          "id": "param_ph",
          "name": "Target pH",
          "norm": "6.4 - 6.8"
        }
      ]
    }
