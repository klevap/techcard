  "processSteps": [
    {
      "id": "p1",
      "number": "1",
      "description": "In the oil phase vessel, combine all ingredients of Part A. Heat to 80°C under moderate stirring until all solids are melted and the phase is uniform.",
      "equipment": "V-202",
      "parameters": [
        {
          "id": "param_temp_A",
          "name": "Temperature",
          "norm": "80°C"
        }
      ]
    },
    {
      "id": "p2",
      "number": "2",
      "description": "In the main vessel, add Part B (Water) and heat to 80°C.",
      "equipment": "V-201",
      "parameters": [
        {
          "id": "param_temp_B",
          "name": "Temperature",
          "norm": "80°C"
        }
      ]
    },
    {
      "id": "p3",
      "number": "3",
      "description": "Slowly add Part A to Part B under homogenization to form the emulsion.",
      "equipment": "V-201, HOMO-1",
      "parameters": [
        {
          "id": "param1",
          "name": "Homogenizer Speed",
          "norm": "8000 rpm"
        }
      ]
    },
    {
      "id": "p4",
      "number": "4",
      "description": "Begin cooling with gentle anchor stirring. When the temperature is below 30°C, add Tinosorb M and stir for 15 minutes. Then add Tinosorb A2B and stir for another 15 minutes. Add the remaining ingredients of Part C in the listed order.",
      "equipment": "V-201",
      "parameters": [
        {
          "id": "param_cool",
          "name": "Cooling Temperature",
          "norm": "< 30°C"
        },
        {
          "id": "param_stir",
          "name": "Stirring Speed",
          "norm": "200 rpm"
        }
      ]
    },
    {
      "id": "p5",
      "number": "5",
      "description": "Check the pH of the batch. Add Part D (Sodium Hydroxide solution) as needed to adjust the pH. Continue stirring for a while until the batch is completely uniform.",
      "equipment": "V-201, QC-PH-01",
      "parameters": [
        {
          "id": "param3",
          "name": "Target pH",
          "norm": "6.5 - 7.0"
        }
      ]
    }
  ],
