  "processSteps": [
    {
      "id": "p1",
      "number": "1",
      "description": "To the main vessel containing Part A water, create a vortex with the anchor stirrer. Slowly sprinkle in Condicare PQ-10-4. Continue mixing until fully dispersed and the solution is clear and free of lumps.",
      "equipment": "V-101",
      "parameters": [
        {
          "id": "param_stir_A",
          "name": "Stirring Speed",
          "norm": "100-150 rpm"
        }
      ]
    },
    {
      "id": "p2",
      "number": "2",
      "description": "Begin heating the batch to 40-45°C using the vessel jacket.",
      "equipment": "V-101",
      "parameters": [
        {
          "id": "param_temp_B",
          "name": "Temperature",
          "norm": "40-45°C"
        }
      ]
    },
    {
      "id": "p3",
      "number": "3",
      "description": "Sequentially add the ingredients of Part B to the main vessel. Mix well after each addition until the batch is uniform and clear.",
      "equipment": "V-101",
      "parameters": [
        {
          "id": "param_stir_B",
          "name": "Stirring Speed",
          "norm": "60-80 rpm"
        }
      ]
    },
    {
      "id": "p4",
      "number": "4",
      "description": "Slowly add Part C to the main vessel. Mix until uniform.",
      "equipment": "V-101",
      "parameters": []
    },
    {
      "id": "p5",
      "number": "5",
      "description": "Turn off heating and begin cooling the batch to below 40°C. Once cooled, add Part D (Sodium Benzoate) and mix until fully dissolved and uniform.",
      "equipment": "V-101",
      "parameters": [
        {
          "id": "param_cool",
          "name": "Cooling Temperature",
          "norm": "< 40°C"
        }
      ]
    },
    {
      "id": "p6",
      "number": "6",
      "description": "Add Part E (Fragrance) and mix until uniform.",
      "equipment": "V-101",
      "parameters": []
    },
    {
      "id": "p7",
      "number": "7",
      "description": "Check the pH of the batch. Adjust to the target range using Part F (Citric Acid 50%) as needed. Mix well after each addition.",
      "equipment": "V-101, QC-PH-01",
      "parameters": [
        {
          "id": "param_ph",
          "name": "Target pH",
          "norm": "4.2 - 4.7"
        }
      ]
    },
    {
      "id": "p8",
      "number": "8",
      "description": "Check the viscosity. Add small increments of Part G (Sodium Chloride) up to a maximum of 0.8% to achieve the final target viscosity. Mix thoroughly until uniform.",
      "equipment": "V-101, QC-VISC-01",
      "parameters": [
        {
          "id": "param_visc",
          "name": "Target Viscosity",
          "norm": "4,500 - 8,000 cP"
        }
      ]
    }
